<StartWindow@Screen>:
    name: "start"
    id: start
    Screen:
        AnchorLayout:
            anchor_y: "top"
            anchor_x: "right"
            padding: [40, 40, 40, 40]
            MDIconButton:
                icon: "brightness-4"
                pos_hint: {"right": 1, "top": 1}
                on_press: app.toggle_theme()
            BoxLayout:
                orientation: "vertical"
                spacing: "10dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                MDCard:
                    size_hint: 0.4, None
                    height: 600
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    elevation: 10
                    padding: 25
                    spacing: 25
                    orientation: 'vertical'

                    MDLabel:
                        text: "Welcome to Mind Nest,\nnew User!"
                        font_size: 25
                        halign: 'center'
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding_y: 2

                    MDTextField:
                        id: user_name
                        helper_text_mode: "on_error"
                        hint_text: "what's your name?"
                        icon_right: "account"
                        size_hint_x: None
                        width: 250
                        font_size: 18
                        pos_hint: {"center_x": 0.5}

                    MDTextField:
                        id: password_1
                        hint_text: "password"
                        icon_right: "key-variant"
                        size_hint_x: None
                        width: 250
                        font_size: 18
                        pos_hint: {"center_x": 0.5}
                        password: True
                        password_mask: "•"

                    MDTextField:
                        id: password_2
                        hint_text: "repeat password"
                        icon_right: "key-variant"
                        size_hint_x: None
                        width: 250
                        font_size: 18
                        pos_hint: {"center_x": 0.5}
                        password: True
                        password_mask: "•"
                        helper_text_mode: "on_error"

                    MDFlatButton:
                        text: "Save"
                        font_size: 14
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        radius: [20, 20, 20, 20]
                        on_press: app.save_new_user()

                    Widget:
                        size_hint_y: None
                        height: 30


                Widget:
                    size_hint_y: None
                    height: 40
